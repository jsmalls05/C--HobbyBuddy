@model LUser

<form asp-action="Login" method="post">
    <div class="form-group">
        <label for="LUserName">Username</label>
        <input asp-for="LUserName" class="form-control"/>
        <span asp-validation-for="LUserName" class="alert-danger"></span>  
    </div>
    <div class="form-group">
        <label for="LPassword">Password</label>
        <input asp-for="LPassword" class="form-control"/> 
        <span asp-validation-for="LPassword" class="alert-danger"></span> 
    </div>
    <input class="btn btn-info" type="submit" value="Login">
</form>